<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dkd.students.mapper.StudentsMapper">
    
    <resultMap type="Students" id="StudentsResult">
        <result property="studentId"    column="student_id"    />
        <result property="studentNum"    column="student_num"    />
        <result property="studentPwd"    column="student_pwd"    />
        <result property="schoolId"    column="school_id"    />
        <result property="collegeId"    column="college_id"    />
        <result property="studentName"    column="student_name"    />
        <result property="sex"    column="sex"    />
        <result property="birth"    column="birth"    />
        <result property="grade"    column="grade"    />
        <result property="major"    column="major"    />
        <result property="classRoom"    column="class_room"    />
        <result property="address"    column="address"    />
        <result property="status"    column="status"    />
        <result property="qualification"    column="qualification"    />
        <result property="contactInfo"    column="contact_info"    />
        <result property="remarks"    column="remarks"    />
        <result property="createdAt"    column="created_at"    />
        <result property="updatedAt"    column="updated_at"    />
        <result property="permissions"    column="permissions"    />
        <result property="userId"    column="user_id"    />
    </resultMap>

    <sql id="selectStudentsVo">
        select student_id, student_num, student_pwd, school_id, college_id, student_name, sex, birth, grade, major, class_room, address, status, qualification, contact_info, remarks, created_at, updated_at, permissions, user_id from tb_students
    </sql>

    <select id="selectStudentsList" parameterType="Students" resultMap="StudentsResult">
        <include refid="selectStudentsVo"/>
        <where>  
            <if test="studentNum != null  and studentNum != ''"> and student_num = #{studentNum}</if>
            <if test="schoolId != null "> and school_id = #{schoolId}</if>
            <if test="collegeId != null "> and college_id = #{collegeId}</if>
            <if test="studentName != null  and studentName != ''"> and student_name like concat('%', #{studentName}, '%')</if>
            <if test="sex != null  and sex != ''"> and sex = #{sex}</if>
            <if test="birth != null "> and birth = #{birth}</if>
            <if test="grade != null  and grade != ''"> and grade = #{grade}</if>
            <if test="major != null  and major != ''"> and major = #{major}</if>
            <if test="classRoom != null  and classRoom != ''"> and class_room = #{classRoom}</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="qualification != null  and qualification != ''"> and qualification = #{qualification}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
            <if test="updatedAt != null "> and updated_at = #{updatedAt}</if>
        </where>
    </select>
    
    <select id="selectStudentsByStudentId" parameterType="Long" resultMap="StudentsResult">
        <include refid="selectStudentsVo"/>
        where student_id = #{studentId}
    </select>
        
    <insert id="insertStudents" parameterType="Students">
        insert into tb_students
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="studentId != null">student_id,</if>
            <if test="studentNum != null and studentNum != ''">student_num,</if>
            <if test="studentPwd != null and studentPwd != ''">student_pwd,</if>
            <if test="schoolId != null">school_id,</if>
            <if test="collegeId != null">college_id,</if>
            <if test="studentName != null and studentName != ''">student_name,</if>
            <if test="sex != null and sex != ''">sex,</if>
            <if test="birth != null">birth,</if>
            <if test="grade != null">grade,</if>
            <if test="major != null and major != ''">major,</if>
            <if test="classRoom != null">class_room,</if>
            <if test="address != null">address,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="qualification != null">qualification,</if>
            <if test="contactInfo != null">contact_info,</if>
            <if test="remarks != null">remarks,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
            <if test="permissions != null">permissions,</if>
            <if test="userId != null">user_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="studentId != null">#{studentId},</if>
            <if test="studentNum != null and studentNum != ''">#{studentNum},</if>
            <if test="studentPwd != null and studentPwd != ''">#{studentPwd},</if>
            <if test="schoolId != null">#{schoolId},</if>
            <if test="collegeId != null">#{collegeId},</if>
            <if test="studentName != null and studentName != ''">#{studentName},</if>
            <if test="sex != null and sex != ''">#{sex},</if>
            <if test="birth != null">#{birth},</if>
            <if test="grade != null">#{grade},</if>
            <if test="major != null and major != ''">#{major},</if>
            <if test="classRoom != null">#{classRoom},</if>
            <if test="address != null">#{address},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="qualification != null">#{qualification},</if>
            <if test="contactInfo != null">#{contactInfo},</if>
            <if test="remarks != null">#{remarks},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
            <if test="permissions != null">#{permissions},</if>
            <if test="userId != null">#{userId},</if>
         </trim>
    </insert>

    <update id="updateStudents" parameterType="Students">
        update tb_students
        <trim prefix="SET" suffixOverrides=",">
            <if test="studentNum != null and studentNum != ''">student_num = #{studentNum},</if>
            <if test="studentPwd != null and studentPwd != ''">student_pwd = #{studentPwd},</if>
            <if test="schoolId != null">school_id = #{schoolId},</if>
            <if test="collegeId != null">college_id = #{collegeId},</if>
            <if test="studentName != null and studentName != ''">student_name = #{studentName},</if>
            <if test="sex != null and sex != ''">sex = #{sex},</if>
            <if test="birth != null">birth = #{birth},</if>
            <if test="grade != null">grade = #{grade},</if>
            <if test="major != null and major != ''">major = #{major},</if>
            <if test="classRoom != null">class_room = #{classRoom},</if>
            <if test="address != null">address = #{address},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="qualification != null">qualification = #{qualification},</if>
            <if test="contactInfo != null">contact_info = #{contactInfo},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
            <if test="permissions != null">permissions = #{permissions},</if>
            <if test="userId != null">user_id = #{userId},</if>
        </trim>
        where student_id = #{studentId}
    </update>

    <delete id="deleteStudentsByStudentId" parameterType="Long">
        delete from tb_students where student_id = #{studentId}
    </delete>

    <delete id="deleteStudentsByStudentIds" parameterType="String">
        delete from tb_students where student_id in 
        <foreach item="studentId" collection="array" open="(" separator="," close=")">
            #{studentId}
        </foreach>
    </delete>
</mapper>