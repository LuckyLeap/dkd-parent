<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dkd.companies.mapper.CompaniesMapper">
    
    <resultMap type="Companies" id="CompaniesResult">
        <result property="companyId"    column="company_id"    />
        <result property="companyNum"    column="company_num"    />
        <result property="companyName"    column="company_name"    />
        <result property="contactInfo"    column="contact_info"    />
        <result property="logo"    column="logo"    />
        <result property="license"    column="license"    />
        <result property="introduction"    column="introduction"    />
        <result property="credential"    column="credential"    />
        <result property="details"    column="details"    />
        <result property="address"    column="address"    />
        <result property="industry"    column="industry"    />
        <result property="size"    column="size"    />
        <result property="nature"    column="nature"    />
        <result property="review"    column="review"    />
        <result property="status"    column="status"    />
        <result property="createdTime"    column="created_time"    />
        <result property="updatedTime"    column="updated_time"    />
        <result property="remarks"    column="remarks"    />
    </resultMap>

    <sql id="selectCompaniesVo">
        select company_id, company_num, company_name, contact_info, logo, license, introduction, credential, details, address, industry, size, nature, review, status, created_time, updated_time, remarks from tb_companies
    </sql>

    <select id="selectCompaniesList" parameterType="Companies" resultMap="CompaniesResult">
        <include refid="selectCompaniesVo"/>
        <where>  
            <if test="companyNum != null "> and company_num = #{companyNum}</if>
            <if test="companyName != null  and companyName != ''"> and company_name like concat('%', #{companyName}, '%')</if>
            <if test="contactInfo != null  and contactInfo != ''"> and contact_info = #{contactInfo}</if>
            <if test="license != null  and license != ''"> and license = #{license}</if>
            <if test="address != null  and address != ''"> and address like concat('%', #{address}, '%')</if>
            <if test="industry != null  and industry != ''"> and industry like concat('%', #{industry}, '%')</if>
            <if test="size != null  and size != ''"> and size = #{size}</if>
            <if test="nature != null  and nature != ''"> and nature = #{nature}</if>
            <if test="review != null  and review != ''"> and review = #{review}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="params.beginCreatedTime != null and params.beginCreatedTime != '' and params.endCreatedTime != null and params.endCreatedTime != ''"> and created_time between #{params.beginCreatedTime} and #{params.endCreatedTime}</if>
            <if test="params.beginUpdatedTime != null and params.beginUpdatedTime != '' and params.endUpdatedTime != null and params.endUpdatedTime != ''"> and updated_time between #{params.beginUpdatedTime} and #{params.endUpdatedTime}</if>
        </where>
    </select>
    
    <select id="selectCompaniesByCompanyId" parameterType="Long" resultMap="CompaniesResult">
        <include refid="selectCompaniesVo"/>
        where company_id = #{companyId}
    </select>
        
    <insert id="insertCompanies" parameterType="Companies" useGeneratedKeys="true" keyProperty="companyId">
        insert into tb_companies
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="companyNum != null">company_num,</if>
            <if test="companyName != null and companyName != ''">company_name,</if>
            <if test="contactInfo != null">contact_info,</if>
            <if test="logo != null">logo,</if>
            <if test="license != null">license,</if>
            <if test="introduction != null">introduction,</if>
            <if test="credential != null">credential,</if>
            <if test="details != null">details,</if>
            <if test="address != null">address,</if>
            <if test="industry != null">industry,</if>
            <if test="size != null">size,</if>
            <if test="nature != null">nature,</if>
            <if test="review != null and review != ''">review,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="updatedTime != null">updated_time,</if>
            <if test="remarks != null">remarks,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="companyNum != null">#{companyNum},</if>
            <if test="companyName != null and companyName != ''">#{companyName},</if>
            <if test="contactInfo != null">#{contactInfo},</if>
            <if test="logo != null">#{logo},</if>
            <if test="license != null">#{license},</if>
            <if test="introduction != null">#{introduction},</if>
            <if test="credential != null">#{credential},</if>
            <if test="details != null">#{details},</if>
            <if test="address != null">#{address},</if>
            <if test="industry != null">#{industry},</if>
            <if test="size != null">#{size},</if>
            <if test="nature != null">#{nature},</if>
            <if test="review != null and review != ''">#{review},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createdTime != null">#{createdTime},</if>
            <if test="updatedTime != null">#{updatedTime},</if>
            <if test="remarks != null">#{remarks},</if>
         </trim>
    </insert>

    <update id="updateCompanies" parameterType="Companies">
        update tb_companies
        <trim prefix="SET" suffixOverrides=",">
            <if test="companyNum != null">company_num = #{companyNum},</if>
            <if test="companyName != null and companyName != ''">company_name = #{companyName},</if>
            <if test="contactInfo != null">contact_info = #{contactInfo},</if>
            <if test="logo != null">logo = #{logo},</if>
            <if test="license != null">license = #{license},</if>
            <if test="introduction != null">introduction = #{introduction},</if>
            <if test="credential != null">credential = #{credential},</if>
            <if test="details != null">details = #{details},</if>
            <if test="address != null">address = #{address},</if>
            <if test="industry != null">industry = #{industry},</if>
            <if test="size != null">size = #{size},</if>
            <if test="nature != null">nature = #{nature},</if>
            <if test="review != null and review != ''">review = #{review},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createdTime != null">created_time = #{createdTime},</if>
            <if test="updatedTime != null">updated_time = #{updatedTime},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
        </trim>
        where company_id = #{companyId}
    </update>

    <delete id="deleteCompaniesByCompanyId" parameterType="Long">
        delete from tb_companies where company_id = #{companyId}
    </delete>

    <delete id="deleteCompaniesByCompanyIds" parameterType="String">
        delete from tb_companies where company_id in 
        <foreach item="companyId" collection="array" open="(" separator="," close=")">
            #{companyId}
        </foreach>
    </delete>
</mapper>